{
  "name": "jrm-django-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:css": "sass frontend/src/scss/main.scss app/static/app/css/main.css --style compressed --source-map",
    "build:js": "esbuild frontend/src/ts/main.ts --bundle --minify --sourcemap --outfile=app/static/app/js/main.js",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "sass frontend/src/scss/main.scss app/static/app/css/main.css --watch --source-map",
    "watch:js": "esbuild frontend/src/ts/main.ts --bundle --sourcemap --outfile=app/static/app/js/main.js --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.0",
    "sass": "^1.69.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "three": "^0.160.0"
  }
}

